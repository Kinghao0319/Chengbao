/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.row{
  display: flex;
  flex-direction: row;
}

.column{
  display: flex;
  flex-direction: column;
}

.c_tab{
  height: 40rpx;
}

.r_tab{
  width: 40rpx;
}

.border{
  border: 5rpx solid;
}

.view-center{
  display: flex;
  align-items: center
}

.RunBtn {
    margin-top: 20px;
    width: 80%;
    height: 100px;
    border-radius: 15px;
    border: 8px solid;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0rpx 100rpx;
    font-size: 90rpx;
    font-weight: bolder;
    box-shadow:0 6rpx 10rpx 2rpx;
}

.recordBtn {
    margin-top: 20px;
    width: max-content;
    height: 60px;
    border-radius: 15px;
    border: 4px solid;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0rpx 100rpx;
    font-size: 40rpx;
    font-weight: bolder;
    box-shadow:0 6rpx 10rpx 2rpx;
}


.c1{
  color: #E4FF4E;
}

.c2{
  color: #311DD4;
}

.c3{
  color: #FD2586;
}

.view-r-center{
  display: flex;
  justify-content: center
}
